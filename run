#!/usr/bin/env python3
"""
Simple runner for Ignacio's Fourier Forecast.
Just run: ./run --once
"""
import sys
import os

# Fix Python path so imports work
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

# Now run the main module
from src.main import main
import asyncio

if __name__ == "__main__":
    asyncio.run(main())