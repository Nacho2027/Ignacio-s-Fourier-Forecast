# RSS-based content aggregation (no API key required)

# OpenRouter API Configuration (for multi-model AI service)
# Get your key from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-4-sonnet

# Legacy: Anthropic API Configuration (for Claude AI service)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Legacy: Google Gemini API Configuration  
# GEMINI_API_KEY=your_gemini_api_key_here

# Voyage AI API Configuration (for embeddings)
# Get your key from https://dash.voyageai.com/
VOYAGE_API_KEY=your_voyage_api_key_here

# Perplexity API Configuration (for search-based content gathering)
# Get your key from https://www.perplexity.ai/api-platform
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Exa Websets API Configuration (for structured content retrieval)
# Get your key from https://dashboard.exa.ai
EXA_API_KEY=your_exa_api_key_here
EXA_SEARCH_TIMEOUT=300
EXA_MAX_RETRIES=3
EXA_RETRY_DELAY=5
EXA_PARALLEL_FETCH=true

# Content Adapter Selection (exa_websets, perplexity_search, or rss)
CONTENT_ADAPTER_TYPE=exa_websets

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=your_email@gmail.com
TO_EMAIL=recipient@example.com
RECIPIENT_EMAIL=recipient@example.com
REPLY_TO_EMAIL=optional_reply_to@example.com

# Integration Settings
RUN_INTEGRATION=1
TEST_EMAIL=test@example.com
EMAIL_SUBJECT_VIA_AI=false
DRY_RUN=false
TEST_MODE=false
